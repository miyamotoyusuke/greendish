<%= form_with(model: dish) do |f| %>

  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="mb3">
  <%= f.label :content, '料理名' %>
  <%= f.text_field :content, class: 'form-control' %>
  </div>
  <div class="mb3">
  <%= f.label :vegetables, '野菜の種数' %>
  <%= f.text_field :vegetables, class: 'form-control' %>
  </div>
  <%= f.submit '記録', class: 'btn btn-primary' %>
<% end %>