<%= form_with(model: dish) do |f| %>
  <% if dish.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% dish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, '料理名' %>
  <%= f.text_field :content %>
  <%= f.label :vegetables, '野菜の種数' %>
  <%= f.text_field :vegetables %>
  
  <%= f.submit '記録' %>
<% end %>